<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fondo5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <TableLayout
        android:id="@+id/tableBtns"
        android:layout_width="360dp"
        android:layout_height="395dp"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.696">

        <TableRow
            android:layout_width="180dp"
            android:layout_height="230dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMetabolismo"
                android:layout_width="175dp"
                android:layout_height="140dp"
                android:paddingStart="5dp"
                android:paddingRight="5dp"
                app:cardBackgroundColor="#1C3203"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/txtMetabolismo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"

                    android:text="Metabolismo Basal"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDiaActivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:text="Día Activo:"
                    android:textAlignment="center"
                    android:textColor="#8BC34A" />

                <TextView
                    android:id="@+id/txtDiaTranquilo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="75dp"
                    android:text="Día Tranquilo:"
                    android:textAlignment="center"
                    android:textColor="#8BC34A" />

                <TextView
                    android:id="@+id/txtDatosMetabolismoAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:text="[metabolismo_basal_act]"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtDatosMetabolismoTranq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="95dp"
                    android:text="[metabolismo_basal_tra]"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAdelgazar"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:paddingRight="5dp"
                app:cardBackgroundColor="#371B68"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/txtAdelgazar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"

                    android:text="Kcal Adelgazar"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDiaActivo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:text="Día Activo:"
                    android:textAlignment="center"
                    android:textColor="#8BC34A" />

                <TextView
                    android:id="@+id/txtDiaTranquilo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="75dp"
                    android:text="Día Tranquilo:"
                    android:textAlignment="center"
                    android:textColor="#8BC34A" />

                <TextView
                    android:id="@+id/txtDatosAdelgazarAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:text="[kcl_adel_act]"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtDatosAdelgazarTranq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="95dp"
                    android:text="[kcl_adel_tra]"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

        </TableRow>

        <TableRow
            android:layout_width="180dp"
            android:layout_height="230dp"
            android:paddingTop="50dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMantener"
                android:layout_width="180dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="#474440"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/txtMantener"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"

                    android:text="Kcal Mantenimiento"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDiaActivo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:text="Día Activo:"
                    android:textAlignment="center"
                    android:textColor="#8BC34A" />

                <TextView
                    android:id="@+id/txtDiaTranquilo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="75dp"
                    android:text="Día Tranquilo:"
                    android:textAlignment="center"
                    android:textColor="#8BC34A" />

                <TextView
                    android:id="@+id/txtDatosMantAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:text="[kcl_mant_act]"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtDatosMantTranq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="95dp"
                    android:text="[kcl_mant_tra]"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardVolumen"
                android:layout_width="180dp"
                android:layout_height="140dp"
                app:cardBackgroundColor="#EB0E0E0E"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/txtVolumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"

                    android:text="Kcal Volumen"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDiaActivo4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:text="Día Activo:"
                    android:textAlignment="center"
                    android:textColor="#8BC34A" />

                <TextView
                    android:id="@+id/txtDiaTranquilo4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="75dp"
                    android:text="Día Tranquilo:"
                    android:textAlignment="center"
                    android:textColor="#8BC34A" />

                <TextView
                    android:id="@+id/txtDatosVolumenAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:text="[kcl_aum_act]"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txtDatosVolumenTranq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="95dp"
                    android:text="[kcl_aum_tra]"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/appBarNutricion"
        android:layout_width="411dp"
        android:layout_height="87dp"
        android:background="#92587C3F"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="MI NUTRICIÓN"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtBienvenida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnVolver7"
        android:layout_width="77dp"
        android:layout_height="86dp"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center"
        android:text="←"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/appBarArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="420dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#5BCDC5C5"
        android:fontFamily="@font/audiowide"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Aquí podrás encontrar los requerimientos nutricionales del mes adaptados a tus datos personales."
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tableBtns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarNutricion" />

</androidx.constraintlayout.widget.ConstraintLayout>