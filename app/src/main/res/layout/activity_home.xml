<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fondo5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#92587C3F"
        android:shadowRadius="10"
        android:text="Cerrar Sesión"
        android:textSize="12sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="358dp"
        android:layout_height="86dp"
        android:layout_marginBottom="452dp"
        android:fontFamily="@font/audiowide"
        android:shadowColor="#8A985E"
        android:shadowDx="10"
        android:shadowDy="7"
        android:shadowRadius="7"
        android:text="Email"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="358dp"
        android:layout_height="86dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/audiowide"
        android:shadowColor="#8A985E"
        android:shadowDx="10"
        android:shadowDy="7"
        android:shadowRadius="7"
        android:text="Bienvenid@"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appBarArea"
        android:layout_width="411dp"
        android:layout_height="87dp"
        android:background="#92587C3F"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="ÁREA PERSONAL"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtBienvenida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="77dp"
        android:layout_height="86dp"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center"
        android:text="←"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/appBarArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img1"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/tableBtns"
        android:layout_width="360dp"
        android:layout_height="395dp"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBienvenida"
        app:layout_constraintVertical_bias="0.345">

        <TableRow
            android:layout_width="180dp"
            android:layout_height="230dp">

            <Button
                android:id="@+id/btnMiRutina"
                android:layout_width="180dp"
                android:layout_height="125dp"
                android:backgroundTint="#D0171616"
                android:padding="10dp"
                android:paddingTop="50dp"
                android:paddingEnd="10dp"
                android:text="Mi Rutina"
                android:textColor="#8BC34A"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btnNutricion"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:backgroundTint="#D003032B"
                android:text="Nutrición"
                android:textColor="#8BC34A"
                app:cornerRadius="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="180dp"
            android:layout_height="230dp"
            android:paddingTop="50dp">

            <Button
                android:id="@+id/btnContactar"
                android:layout_width="180dp"
                android:layout_height="125dp"
                android:backgroundTint="#D00A1C01"
                android:text="Contactar"
                android:textColor="#8BC34A"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/btnTarifas2"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:backgroundTint="#D00E0E0E"
                android:text="Tarifas"
                android:textColor="#8BC34A"
                app:cornerRadius="20dp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>